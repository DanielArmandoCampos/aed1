using System;

class MainClass {
  public static void Main (string[] args) {

    int num=0, cont=0;
   
    Console.WriteLine("Digite um numero inteiro ou um numero negativo para sair");
    num=int.Parse(Console.ReadLine());

    while (num>=0){
      
      while (cont<10){

        Console.WriteLine("{0} x {1} Ã©: {2}",num,cont,(num*cont));
        
     
        cont++;
      }
      cont=0;
       
      Console.WriteLine("Digite um numero inteiro ou um numero negativo para sair");
      num=int.Parse(Console.ReadLine());
    }

    Console.WriteLine ("VLW");
  }
}
